<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_rounded">

    <!-- ===== Title ===== -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- ===== Profile Image ===== -->
    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="6dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#2563EB">

        <!-- INNER CARD (IMAGE HOLDER) -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:id="@+id/imgPickProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profilee"
                android:contentDescription="Profile Image"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <!-- Hint -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to change photo"
        android:textSize="12sp"
        android:textColor="#64748B"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"/>

    <!-- ===== Username ===== -->
    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#0F172A"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edittext"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#0F172A"
        android:textSize="14sp"
        android:enabled="false" />

    <!-- ===== Phone ===== -->
    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_edittext"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="12dp"
        android:textColor="#0F172A"
        android:textSize="14sp" />

    <!-- ===== Error Text ===== -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DC2626"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        android:visibility="gone"/>

    <!-- ===== Buttons ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textStyle="bold"
            android:textColor="#64748B"
            android:background="@drawable/bg_btn_outline"/>

        <View
            android:layout_width="12dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_gradient"/>
    </LinearLayout>

</LinearLayout>
