<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">
<LinearLayout
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_edittext">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/load_image"/>

    <LinearLayout
        android:id="@+id/detaisid"
        android:layout_toEndOf="@id/imgProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:textSize="18sp"
            android:paddingBottom="3dp"
            android:textColor="#212121"
            android:text="Machine"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtDescription"
            android:paddingBottom="5dp"
            android:text="this is a discription"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RatingBar
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:stepSize="0.5"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#FFA000" />
    <TextView
        android:id="@+id/txtReviews"
        android:text="5 stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textSize="12sp"
        android:textColor="@color/text_gray"/>

</LinearLayout>

        <TextView
            android:id="@+id/txtStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="out of text"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_toEndOf="@id/detaisid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"


        android:orientation="vertical"
        android:gravity="bottom|center">
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="$222"
                android:paddingBottom="2dp"
                android:textColor="#888888"/>

            <TextView
                android:id="@+id/txtOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="16sp"
                android:text="$21000"
                android:textStyle="bold"/>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_add_cart_gradient"
            android:elevation="100dp"
            android:text="    Add To Cart   "/>


    </LinearLayout>



</LinearLayout>

</com.google.android.material.card.MaterialCardView>
