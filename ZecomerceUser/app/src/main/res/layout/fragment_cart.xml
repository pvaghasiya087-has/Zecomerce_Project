<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5FAFF"
    android:padding="16dp">

    <!-- EMPTY CART -->
    <LinearLayout
        android:id="@+id/emptyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_cart"
            app:tint="#90CAF9" />

        <TextView
            android:id="@+id/tvEmptyCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your cart is empty"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looks like you haven't added anything yet"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- CART LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="vertical"/>


    <!-- TOTAL AMOUNT CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_total"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="16sp"
            android:textColor="#616161"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹0"
            android:textSize="18sp"
            android:textColor="#1565C0"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- CHECKOUT BUTTON -->
    <android.widget.Button
        android:id="@+id/btnCheckout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Proceed to Checkout"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/bg_btn_primary"
        android:layout_marginBottom="8dp"/>

    <!-- SECONDARY BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.widget.Button
            android:id="@+id/btnTestPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Test Order"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_primary"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <android.widget.Button
            android:id="@+id/btnPrced"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Proceed"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_secondary"/>
    </LinearLayout>

</LinearLayout><!-- CART LOADER -->
    <FrameLayout
        android:id="@+id/cartLoader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:layout_gravity="center"/>
    </FrameLayout>

    <include layout="@layout/layout_no_internet"/>

</FrameLayout>
