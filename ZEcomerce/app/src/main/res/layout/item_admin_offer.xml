<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Offer Image -->
        <ImageView
            android:id="@+id/imgOffer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_redius"
            android:src="@drawable/load_image"
            android:contentDescription="Offer Image" />

        <!-- Middle Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Offer Title -->
            <TextView
                android:id="@+id/tvOfferTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Title"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Product Count -->
            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Products"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#E64A19"
                android:layout_marginTop="4dp"/>

            <!-- Optional Description -->
            <TextView
                android:id="@+id/tvOfferDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limited time special offer"
                android:textSize="13sp"
                android:textColor="#757575"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Admin Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_update_blue"
                android:padding="6dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_delete_red"
                android:padding="6dp"
                android:src="@android:drawable/ic_menu_delete" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
