<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#B91C1C"
                android:endColor="#DC2626"
                android:angle="270"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape>
            <gradient
                android:startColor="#EF4444"
                android:endColor="#B91C1C"
                android:angle="270"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

</selector>
